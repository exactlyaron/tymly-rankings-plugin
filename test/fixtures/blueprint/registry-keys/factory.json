{
  "label": "Factory factors",
  "description": "Holds the factors and weights to build a risk score for a Factory",
  "schema": {
    "properties": {
      "value": {
        "type": "object",
        "default": {
          "exponent": {
            "veryLow": "0.01",
            "medium": "0.02",
            "veryHigh": "0.03"
          },
          "usage": {
            "type": "constant",
            "score": 8
          },
          "foodStandards": {
            "type": "options",
            "default": 0,
            "options": [
              {
                "type": "numeric-range",
                "minimum": 0,
                "maximum": 2,
                "score": 8
              },
              {
                "type": "numeric-range",
                "minimum": 3,
                "maximum": 4,
                "score": 6
              },
              {
                "type": "numeric-constant",
                "numericValue": 5,
                "score": 2
              }
            ]
          },
          "incidents": {
            "type": "options",
            "default": 0,
            "options": [
              {
                "type": "numeric-constant",
                "numericValue": 0,
                "score": 0
              },
              {
                "type": "numeric-constant",
                "numericValue": 1,
                "score": 6
              },
              {
                "type": "numeric-boundary",
                "operator": "greaterThan",
                "numericValue": 1,
                "score": 16
              }
            ]
          },
          "heritage": {
            "type": "exists",
            "default": 0,
            "score": 2
          }
        }
      }
    }
  }
}