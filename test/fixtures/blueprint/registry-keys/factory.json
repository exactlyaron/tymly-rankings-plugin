{
  "label": "Factory factors",
  "description": "Holds the factors and weights to build a risk score for a Factory",
  "schema": {
    "properties": {
      "value": {
        "type": "object",
        "default": {
          "usage": {
            "type": "constant",
            "value": 8
          },
          "foodStandards": {
            "type": "options",
            "options": [
              {
                "type": "numeric-range",
                "minimum": 0,
                "maximum": 2,
                "score": 8
              },
              {
                "type": "numeric-range",
                "minimum": 3,
                "maximum": 4,
                "score": 6
              },
              {
                "type": "numeric-constant",
                "value": 5,
                "score": 2
              }
            ]
          },
          "incidents": {
            "type": "options",
            "options": [
              {
                "type": "numeric-constant",
                "value": 0,
                "score": 0
              },
              {
                "type": "numeric-constant",
                "value": 1,
                "score": 6
              },
              {
                "type": "numeric-boundary",
                "operator": "greaterThan",
                "value": 1,
                "score": 16
              }
            ]
          },
          "heritage": {
            "type": "boolean",
            "operator": "equals",
            "value": "Y",
            "true-score": 2,
            "false-score": 0
          }
        }
      }
    }
  }
}